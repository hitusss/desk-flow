{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "desk-flow",
  "private": true,
  "packageManager": "bun@1.3.5",
  "engines": {
    "bun": ">=1.3.5",
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tools/*"
    ],
    "catalog": {
      "typescript": "^5.9.3"
    }
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.0",
    "typescript": "catalog:"
  }
}
