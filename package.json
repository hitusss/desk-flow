{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "desk-flow",
  "private": true,
  "packageManager": "bun@1.3.5",
  "engines": {
    "bun": ">=1.3.5",
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tools/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.5",
      "@types/node": "^22.19.7",
      "typescript": "^5.9.3",
      "eslint": "^9.39.2",
      "prettier": "^3.8.1"
    }
  },
  "devDependencies": {
    "@repo/prettier": "workspace:",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.8.0",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier"
}
